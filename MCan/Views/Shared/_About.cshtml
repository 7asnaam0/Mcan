@inject MCan.Services.JsonLocalizationService Localizer
@using Microsoft.Extensions.Localization
@using System.Globalization

<!-- About Section -->
<section id="about" class="about section">

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 align-items-center">

            <!-- الصورة -->
            <div class="col-lg-6 order-1 order-lg-2 text-center">
                <img src="~/assets/About.png" class="img-fluid rounded-3 shadow-sm" alt="About MCan">
            </div>

            <!-- المحتوى -->
            <div class="col-lg-6 order-2 order-lg-1 content">
                <h3>@Localizer.Get("AboutTitle")</h3>
                <p class="fst-italic">
                    @Localizer.Get("AboutIntro")
                </p>

                <ul class="list-unstyled mt-3">
                    <li>
                        <i class="bi bi-check2-all"></i>
                        <span>@Localizer.Get("AboutPoint1")</span>
                    </li>
                    <li>
                        <i class="bi bi-check2-all"></i>
                        <span>@Localizer.Get("AboutPoint2")</span>
                    </li>
                    <li>
                        <i class="bi bi-check2-all"></i>
                        <span>@Localizer.Get("AboutPoint3")</span>
                    </li>
                </ul>

                <p class="mt-3">
                    @Localizer.Get("AboutConclusion")
                </p>
            </div>

        </div>

    </div>

</section>
<!-- /About Section -->
