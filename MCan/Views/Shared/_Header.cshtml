@using System.Globalization
@using Microsoft.AspNetCore.Html
@inject MCan.Services.JsonLocalizationService Localizer

@{
    var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
var companyName = currentCulture == "ar"
    ? new HtmlString("إمكان")
    : new HtmlString("M<span class=\"dot\">.</span>CAN");

}

<section id="hero" class="hero section dark-background">
    <img src="assets/200.gif" alt="" data-aos="fade-in">

    <div class="container">
        <div class="row justify-content-center text-center" data-aos="fade-up" data-aos-delay="100">
            <div class="col-xl-6 col-lg-8">
                <h2>@Localizer.Get("Powerful Digital Solutions With") @companyName</h2>

                <p>@Localizer.Get("descraption")</p>
            </div>
        </div>

        <div class="row gy-4 mt-5 justify-content-center" data-aos="fade-up" data-aos-delay="200">
            <div class="col-xl-2 col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="icon-box">
                    <i class="bi bi-lightbulb"></i>
                    <h3><a>@Localizer.Get("Smart Software Solutions")</a></h3>
                </div>
            </div>

            <div class="col-xl-2 col-md-4" data-aos="fade-up" data-aos-delay="400">
                <div class="icon-box">
                    <i class="bi bi-gear"></i>
                    <h3><a>@Localizer.Get("Flexible and Scalable Design")</a></h3>
                </div>
            </div>

            <div class="col-xl-2 col-md-4" data-aos="fade-up" data-aos-delay="500">
                <div class="icon-box">
                    <i class="bi bi-people"></i>
                    <h3><a>@Localizer.Get("Experienced and Passionate Team")</a></h3>
                </div>
            </div>

            <div class="col-xl-2 col-md-4" data-aos="fade-up" data-aos-delay="600">
                <div class="icon-box">
                    <i class="bi bi-shield-check"></i>
                    <h3><a>@Localizer.Get("Quality and Security You Can Trust")</a></h3>
                </div>
            </div>

            <div class="col-xl-2 col-md-4" data-aos="fade-up" data-aos-delay="700">
                <div class="icon-box">
                    <i class="bi bi-headset"></i>
                    <h3><a>@Localizer.Get("Continuous Technical Support")</a></h3>
                </div>
            </div>
        </div>
    </div>
</section>
