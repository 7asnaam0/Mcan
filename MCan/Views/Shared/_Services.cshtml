@inject MCan.Services.JsonLocalizationService Localizer

<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Localizer.Get("Our Services")</h2>
        <p>@Localizer.Get("Check our Services")</p>
    </div>

    <div class="container">
        <div class="row gy-4">

            <!-- Point of Sale / Cashier Systems -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-cash-stack"></i>
                    </div>
                    <a class="stretched-link">
                        <h3>@Localizer.Get("Point of Sale Systems")</h3>
                    </a>
                    <p>@Localizer.Get("Point of Sale Desc")</p>
                </div>
            </div>

            <!-- Clinics / Medical Systems -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-hospital"></i>
                    </div>
                    <a class="stretched-link">
                        <h3>@Localizer.Get("Clinic & Hospital Systems")</h3>
                    </a>
                    <p>@Localizer.Get("Clinic & Hospital Desc")</p>
                </div>
            </div>

            <!-- Sales & Inventory Systems -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-bar-chart-line"></i>
                    </div>
                    <a class="stretched-link">
                        <h3>@Localizer.Get("Sales & Inventory")</h3>
                    </a>
                    <p>@Localizer.Get("Sales & Inventory Desc")</p>
                </div>
            </div>

            <!-- Photo Studios & Printing Shops -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="400">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-camera"></i>
                    </div>
                    <a class="stretched-link">
                        <h3>@Localizer.Get("Photo & Printing Shops")</h3>
                    </a>
                    <p>@Localizer.Get("Photo & Printing Desc")</p>
                </div>
            </div>

            <!-- Rental & Leasing Stores -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="500">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <a class="stretched-link">
                        <h3>@Localizer.Get("Rental & Leasing Stores")</h3>
                    </a>
                    <p>@Localizer.Get("Rental & Leasing Desc")</p>
                </div>
            </div>

            <!-- Custom Business Solutions -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="600">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-lightbulb"></i>
                    </div>
                    <a class="stretched-link">
                        <h3>@Localizer.Get("Custom Digital Solutions")</h3>
                    </a>
                    <p>@Localizer.Get("Custom Digital Desc")</p>
                </div>
            </div>

        </div>
    </div>
</section>
