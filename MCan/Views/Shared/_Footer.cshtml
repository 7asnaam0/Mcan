@inject MCan.Services.JsonLocalizationService Localizer
@using Microsoft.Extensions.Localization
@using System.Globalization

@{
    var isArabic = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar";
    var dir = isArabic ? "rtl" : "ltr";
    var textAlign = isArabic ? "text-end" : "text-start";
    var iconMarginClass = isArabic ? "ms-2" : "me-2"; // مسافة بين الأيقونات والنص
}

<footer id="footer" class="footer dark-background" dir="@dir">

    <div class="footer-top">
        <div class="container">
            <div class="row gy-4">
                <!-- About -->
                <div class="col-lg-4 col-md-6 footer-about">
                    <a href="index.html" class="logo d-flex align-items-center">
                        <span class="sitename">M.can</span>
                    </a>
                    <div class="footer-contact pt-3 @textAlign">
                        <p>@Localizer.Get("contact info addressValue")</p>
                        <p>
                            <strong>@Localizer.Get("contact info email"):</strong>
                            <span>@Localizer.Get("contact info emailValue")</span>
                        </p>
                        @* <p><strong>@Localizer.Get("contact info call"):</strong> <span>@Localizer.Get("contact info callValue1")</span></p> *@
                    </div>
                    <div class="social-links d-flex mt-4">
                        <a href="#"><i class="bi bi-twitter-x @iconMarginClass"></i></a>
                        <a href="https://www.facebook.com/profile.php?id=61575164548300"><i class="bi bi-facebook @iconMarginClass"></i></a>
                        <a href="#"><i class="bi bi-instagram @iconMarginClass"></i></a>
                        <a href="#"><i class="bi bi-linkedin @iconMarginClass"></i></a>
                    </div>
                </div>

                <!-- Useful Links -->
                <div class="col-lg-3 col-md-3 footer-links @textAlign">
                    <h4>@Localizer.Get("footer usefulLinks")</h4>
                    <ul>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#hero">@Localizer.Get("footer home")</a></li>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#about">@Localizer.Get("footer about")</a></li>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#services">@Localizer.Get("footer services")</a></li>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#portfolio">@Localizer.Get("footer projects")</a></li>
                    </ul>
                </div>

                <!-- Our Services -->
                <div class="col-lg-3 col-md-3 footer-links @textAlign">
                    <h4>@Localizer.Get("footer ourServices")</h4>
                    <ul>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#services">@Localizer.Get("footer posSystems")</a></li>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#services">@Localizer.Get("footer clinicSystems")</a></li>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#services">@Localizer.Get("footer salesInventory")</a></li>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#services">@Localizer.Get("footer photoPrinting")</a></li>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#services">@Localizer.Get("footer rentalStores")</a></li>
                        <li><i class="bi bi-chevron-right @iconMarginClass"></i> <a href="#services">@Localizer.Get("footer customSolutions")</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="copyright">
        <div class="container text-center">
            <p>© <span>@Localizer.Get("footer copyright")</span> <strong class="px-1 sitename">M.can</strong> <span>@Localizer.Get("footer allRights")</span></p>
        </div>
    </div>

</footer>
