@inject MCan.Services.JsonLocalizationService Localizer
@using System.Globalization

@{
    var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

<div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

    <!-- اللوجو -->
    <a href="/" class="logo d-flex align-items-center me-auto me-xl-0">
        <img src="~/assets/logo.png" alt="">
        <h1 class="sitename">M<span>.</span>CAN</h1>
    </a>

    <!-- الناف بار -->
    <nav id="navmenu" class="navmenu @(currentCulture == "ar" ? "flex-row" : "")">
        <ul class="@(currentCulture == "ar" ? "text-end" : "text-start")">
            <li><a href="#hero" class="active">@Localizer.Get("Home")</a></li>
            <li><a href="#about">@Localizer.Get("About")</a></li>
            <li><a href="#services">@Localizer.Get("Services")</a></li>
            <li><a href="#portfolio">@Localizer.Get("Portfolio")</a></li>
            <li><a href="#contact">@Localizer.Get("Contact")</a></li>

            <li>
                <form method="post" asp-controller="Localization" asp-action="SetLanguage" id="langForm" class="d-inline">
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                    <select name="culture"
                            onchange="document.getElementById('langForm').submit()"
                            style="width:auto; display:inline-block; background:transparent; border:none; color:white;">
                        @if (currentCulture == "en")
                        {
                            <option value="en" selected>English</option>
                            <option value="ar">العربية</option>
                        }
                        else
                        {
                            <option value="en">English</option>
                            <option value="ar" selected>العربية</option>
                        }
                    </select>
                </form>
            </li>
        </ul>

        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
    </nav>
</div>
