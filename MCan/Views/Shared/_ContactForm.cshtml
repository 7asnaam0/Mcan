                        </div>

                    </div>
                </form>
                <div id="formStatus" style="margin-top:10px; text-align:center; display:none;"></div> 

            </div><!-- End Contact Form -->

        </div>

    </div>

</section><!-- /Contact Section -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
      const wrapper = document.getElementById('clients-wrapper');
    const btn = document.getElementById('loadMoreClients');
    if (!btn) return;

    btn.addEventListener('click', async function () {
        const skip = parseInt(btn.getAttribute('data-skip') || '0');
        const total = parseInt(btn.getAttribute('data-total') || '0');
        btn.disabled = true;
        btn.textContent = 'Loading...';

        try {
            const res = await fetch(`/Client/GetMore?skip=${skip}`);
            if (!res.ok) throw new Error('Request failed');
            const data = await res.json();
            const items = data.items || [];

            if (items.length === 0) {
                btn.parentElement.style.display = 'none';
                return;
            }

            items.forEach(it => {
                const div = document.createElement('div');
                div.className = 'client-item';
                const imgSrc = it.image ? it.image : '/assets/img/clients/placeholder.png';
                div.innerHTML = `<img src="${imgSrc}" class="img-fluid" alt="${it.name}" />`;
                wrapper.appendChild(div);
            });

            const newSkip = skip + items.length;
            btn.setAttribute('data-skip', newSkip);

            if (newSkip >= total) {
                btn.parentElement.style.display = 'none';
            } else {
                btn.disabled = false;
                btn.textContent = 'Load more';
            }

        } catch (err) {
            console.error(err);
            btn.disabled = false;
            btn.textContent = 'Load more';
            alert('Error loading more clients.');
        }
    });

</script>
