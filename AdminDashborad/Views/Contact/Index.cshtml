@model List<Models.ContactMessage>

@{
    ViewData["Title"] = "Contact Messages";
}

<div class="container my-4">
    <h2 class="mb-3 text-center">Contact Messages</h2>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Message</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int count = 1;
                    foreach (var msg in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@msg.Name</td>
                            <td>@msg.Email</td>
                            <td>@msg.PhoneNumber</td>
                            <td>@msg.Message</td>

                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No messages found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
