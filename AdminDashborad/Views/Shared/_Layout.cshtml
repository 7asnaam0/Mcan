<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MyApp</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            overflow-x: hidden;
            padding-top: 56px; /* Navbar fixed height */
            background: #f8f9fa;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Navbar */
        #mainNavbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1050;
            background: #343a40;
            color: white;
            display: flex;
            align-items: center;
            padding: 0 1rem;
            height: 56px;
        }

        /* Sidebar toggle button */
        #sidebarToggle {
            background-color: #212529; /* Darker, matches sidebar */
            border: none;
            color: white;
            font-size: 1.4rem;
            width: 44px;
            height: 44px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: background-color 0.3s ease;
            box-shadow: 0 0 5px rgba(0,0,0,0.3);
        }

            #sidebarToggle:hover {
                background-color: #495057; /* Slightly lighter on hover */
            }

        /* Sidebar */
        #sidebar {
            position: fixed;
            top: 56px; /* below navbar */
            left: 0;
            width: 250px;
            height: calc(100vh - 56px);
            background: #212529; /* Dark sidebar */
            color: white;
            padding: 20px;
            transition: transform 0.3s ease;
            transform: translateX(-250px);
            z-index: 1040;
            overflow-y: auto;
            box-shadow: 2px 0 5px rgba(0,0,0,0.5);
            border-top-right-radius: 8px;
            border-bottom-right-radius: 8px;
        }

            #sidebar.show {
                transform: translateX(0);
            }

            #sidebar .nav-link {
                color: #ced4da;
                font-weight: 500;
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 10px 15px;
                border-radius: 6px;
                transition: background-color 0.2s ease;
            }

                #sidebar .nav-link:hover,
                #sidebar .nav-link.active {
                    background-color: #495057;
                    color: white;
                    text-decoration: none;
                }

                #sidebar .nav-link i {
                    font-size: 1.3rem;
                }

        /* Content */
        #content {
            padding: 20px;
            margin-left: 0;
            transition: margin-left 0.3s ease;
        }

            #content.shifted {
                margin-left: 250px; /* margin for sidebar */
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav id="mainNavbar" role="navigation" aria-label="Main Navigation">
        <button id="sidebarToggle" aria-label="Toggle Sidebar" title="Toggle Sidebar">
            <i class="bi bi-list"></i>
        </button>
        <h5 class="mb-0 ms-3">Dashboard</h5>
    </nav>

    <!-- Sidebar -->
    <nav id="sidebar" aria-label="Sidebar Navigation">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="/Home/Index" class="nav-link active">
                    <i class="bi bi-house-door-fill"></i> Home
                </a>
            </li>
            <li class="nav-item">
                <a href="/Projects/Index" class="nav-link">
                    <i class="bi bi-kanban-fill"></i> Projects
                </a>
            </li>
            <li class="nav-item">
                <a href="/Services/Index" class="nav-link">
                    <i class="bi bi-gear-fill"></i> Services
                </a>
            </li>

            <li class="nav-item">
                <a href="/Contact/Index" class="nav-link">
                    <i class="bi bi-chat-left-text-fill"></i> Contact Messages
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main content -->
    <main id="content">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');
        const toggleBtn = document.getElementById('sidebarToggle');

        toggleBtn.addEventListener('click', () => {
          sidebar.classList.toggle('show');
          content.classList.toggle('shifted');
        });
    </script>

</body>
</html>
