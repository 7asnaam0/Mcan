@model IEnumerable<Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<h2 class="text-center mb-4">عملاؤنا</h2>

<div class="text-center mb-4">
    <a class="btn btn-primary btn-sm" asp-action="Create">إضافة عميل جديد</a>
</div>

<div class="d-flex justify-content-center">
    <div style="width: 80%; max-width: 900px;">
        <table class="table table-striped table-hover align-middle shadow-sm" style="border-radius:0.8rem; overflow:hidden; font-size:0.9rem;">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>الاسم</th>
                    <th>الهاتف</th>
                    <th>الرابط</th>
                    <th>الصورة</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    int i = 1;
                    foreach (var client in Model)
                    {
                        <tr>
                            <th>@i</th>
                            <td>@client.Name</td>
                            <td>@client.PhoneNumber</td>
                            <td>
                                @if (!string.IsNullOrEmpty(client.Link))
                                {
                                    <a href="@client.Link" target="_blank">Link</a>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(client.Image))
                                {
                                    <img src="@client.Image" alt="@client.Name" style="width:60px; height:45px; object-fit:cover; border-radius:0.3rem;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@client.Id">تعديل</a>
                                <form asp-action="Delete" asp-route-id="@client.Id" method="post" style="display:inline;" onsubmit="return confirm('هل أنت متأكد؟');">
                                    <button type="submit" class="btn btn-danger btn-sm">حذف</button>
                                </form>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">لا يوجد عملاء حاليا</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
 