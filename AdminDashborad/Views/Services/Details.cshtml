@model Models.Service

@{
    ViewData["Title"] = "Service Details";
}

<h1 class="mb-4">Service Details</h1>

<div class="card shadow-sm p-4 mb-5" style="max-width: 900px; margin:auto;">
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label fw-bold">Title (Arabic):</label>
            <p class="form-control-plaintext">@Model.TitleAr</p>
        </div>
        <div class="col-md-6">
            <label class="form-label fw-bold">Title (English):</label>
            <p class="form-control-plaintext">@Model.TitleEn</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label fw-bold">Description (Arabic):</label>
            <p class="form-control-plaintext">@Model.DescriptionAr</p>
        </div>
        <div class="col-md-6">
            <label class="form-label fw-bold">Description (English):</label>
            <p class="form-control-plaintext">@Model.DescriptionEn</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <label class="form-label fw-bold">Service Image:</label><br />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Service Image" class="img-thumbnail" style="max-height: 250px;" />
            }
            else
            {
                <p class="text-muted">No image uploaded</p>
            }
        </div>
    </div>

    <div class="d-flex justify-content-start gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
