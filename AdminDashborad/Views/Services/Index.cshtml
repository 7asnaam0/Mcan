@model IEnumerable<Models.Service>

@{
    ViewData["Title"] = "Services List";
}

<h1 class="mb-4 text-center">Services</h1>

<p class="text-center mb-4">
    <a asp-controller="Services" asp-action="Create" class="btn btn-primary">Add New Service</a>
</p>

<div class="row g-4">
    @foreach (var service in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(service.ImageUrl))
                {
                    <img src="@service.ImageUrl" class="card-img-top" alt="Service Image" style="height:180px; object-fit:cover;" />
                }
                else
                {
                    <div class="card-img-top d-flex align-items-center justify-content-center bg-secondary text-white" style="height:180px;">
                        No Image
                    </div>
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@service.TitleAr</h5>
                    <p class="card-text text-truncate" title="@service.DescriptionAr">@service.DescriptionAr</p>
                    <div class="mt-auto">
                        <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-action="DeleteConfirmed" asp-route-id="@service.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
