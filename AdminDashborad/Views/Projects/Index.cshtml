@model IEnumerable<Models.Project>

@{
    ViewData["Title"] = "Projects List";
}

<h1 class="mb-4 text-center">Projects</h1>

<p class="text-center mb-4">
    <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">Add New Project</a>
</p>

<div class="row g-4">
    @foreach (var project in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3" id="project-@project.Id">
            <div class="card h-100 shadow-sm">

                @if (!string.IsNullOrEmpty(project.ImageUrl))
                {
                    <img src="~/images/@project.ImageUrl"
                         alt="@project.TitleAr"
                         style="width:100%" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@project.TitleAr</h5>
                    <p class="card-text text-truncate" title="@project.DescriptionAr">@project.DescriptionAr</p>
                    <div class="mt-auto">
                        <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <button class="btn btn-danger btn-sm" onclick="deleteProject(@project.Id)">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {

    <script>
        function deleteProject(id) {
            if (!confirm('هل أنت متأكد من الحذف؟')) return;

            fetch(`/Projects/DeleteConfirmed/${id}`, {
                method: 'POST'
            })
            .then(response => {
                if (response.ok) {
                    const projectElement = document.getElementById(`project-${id}`);
                    if (projectElement) projectElement.remove();
                    alert('تم الحذف بنجاح');
                } else {
                    alert('حدث خطأ أثناء الحذف');
                }
            })
            .catch(err => {
                console.error(err);
                alert('حدث خطأ أثناء الحذف');
            });
        }
    </script>

}
